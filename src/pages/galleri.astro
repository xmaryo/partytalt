---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import flextaltImg from '~/assets/images/flextalt.webp';
import partytaltImg from '~/assets/images/partytalt.webp';
import stolarImg from '~/assets/images/stolar.webp';
import bordImg from '~/assets/images/bord.webp';

const metadata = {
  title: 'Galleri',
};

const images = [
  { src: partytaltImg, alt: 'Partytält för bröllop', title: 'Partytält' },
  { src: flextaltImg, alt: 'Flextält för marknad', title: 'Flextält' },
  { src: stolarImg, alt: 'Vita fällstolar', title: 'Stolar' },
  { src: bordImg, alt: 'Fällbord', title: 'Bord' },
];
---

<Layout metadata={metadata}>
  <Hero
    tagline="Galleri"
    title="Se våra produkter"
    subtitle="Bilder på våra tält, möbler och tillbehör. Få inspiration till ditt nästa event!"
  />

  <section class="py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {images.map((image) => (
          <div class="group relative overflow-hidden rounded-2xl bg-gray-100 dark:bg-slate-800">
            <img
              src={image.src.src}
              alt={image.alt}
              class="w-full h-64 object-contain p-8 transition-transform duration-300 group-hover:scale-105"
            />
            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/60 to-transparent p-4">
              <h3 class="text-white font-semibold text-lg">{image.title}</h3>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-12 text-center">
        <p class="text-muted text-lg mb-4">
          Fler bilder från event kommer snart! Har du bilder från ett event med våra produkter? Dela gärna med oss.
        </p>
      </div>
    </div>
  </section>

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Kontakta oss',
        href: '/kontakt',
        icon: 'mdi:email-outline',
      },
      {
        text: 'Se produkter',
        href: '/#produkter',
      },
    ]}
  >
    <Fragment slot="title">
      Vill du se produkterna på plats?
    </Fragment>

    <Fragment slot="subtitle">
      Kontakta oss för att boka ett besök eller få mer information om våra produkter.
    </Fragment>
  </CallToAction>
</Layout>
