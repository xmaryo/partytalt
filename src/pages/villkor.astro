<script>
  // Auto-trigger print dialog when page loads (for PDF generation)
  if (window.opener || document.referrer) {
    window.addEventListener('load', () => {
      setTimeout(() => {
        window.print();
      }, 500);
    });
  }

  // Share functionality
  function shareDocument() {
    if (navigator.share) {
      navigator
        .share({
          title: 'Hyresvillkor - partytältHbg',
          text: 'Hyresvillkor för tält och utrustning',
          url: window.location.href,
        })
        .catch(() => {
          copyToClipboard();
        });
    } else {
      copyToClipboard();
    }
  }

  function copyToClipboard() {
    navigator.clipboard
      .writeText(window.location.href)
      .then(() => {
        alert('Länk kopierad till urklipp!');
      })
      .catch(() => {
        prompt('Kopiera länken:', window.location.href);
      });
  }

  // Make shareDocument available globally
  (window as unknown as { shareDocument: typeof shareDocument }).shareDocument = shareDocument;
</script>
