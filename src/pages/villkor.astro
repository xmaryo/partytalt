---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';
import logoLight from '~/assets/images/logo/logo-light.png';

const metadata = {
  title: 'Hyresvillkor',
  description:
    'Läs våra hyresvillkor för partytält och eventutrustning. Information om bokning, betalning, avbokning och ansvar.',
  robots: {
    index: false,
  },
};
---

<Layout metadata={metadata}>
  <!-- Hide header and footer for contract page -->
  <Fragment slot="header"></Fragment>
  <Fragment slot="footer"></Fragment>

  <section class="py-8 md:py-12 print:py-4">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <!-- Document Container -->
      <div
        class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl border border-gray-100 dark:border-slate-700 overflow-hidden print:shadow-none print:border-none"
      >
        <!-- Header with Logo -->
        <div class="bg-gradient-to-r from-primary to-primary/80 px-6 py-4 print:py-2 print:px-4">
          <div class="flex items-center justify-center gap-4">
            <div class="bg-white rounded-xl p-2 shadow-md print:p-1">
              <Image src={logoLight} alt="partytältHbg" class="h-12 w-auto print:h-8" width={80} height={80} />
            </div>
            <div class="text-left">
              <h1 class="text-2xl md:text-3xl font-bold text-white print:text-xl">Hyresvillkor</h1>
              <p class="text-white/90 text-sm">Tält och utrustning</p>
            </div>
          </div>
        </div>

        <!-- Document Content -->
        <div class="px-8 py-10 md:px-12">
          <!-- Intro Section with Fillable Fields -->
          <div class="mb-10 p-6 bg-gray-50 dark:bg-slate-700/50 rounded-xl border-l-4 border-primary">
            <p class="text-gray-700 dark:text-slate-300 leading-relaxed">Dessa villkor gäller mellan</p>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4 my-4">
              <div>
                <label class="text-xs text-gray-500 dark:text-slate-400 block mb-1">Uthyrarens företagsnamn</label>
                <input
                  type="text"
                  class="form-input w-full px-3 py-2 border border-gray-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-800 text-gray-900 dark:text-white font-medium print:border-0 print:border-b print:border-gray-400 print:rounded-none print:px-0 print:py-1"
                  placeholder="partytältHbg"
                />
              </div>
              <div>
                <label class="text-xs text-gray-500 dark:text-slate-400 block mb-1">Org.nr</label>
                <input
                  type="text"
                  class="form-input w-full px-3 py-2 border border-gray-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-800 text-gray-900 dark:text-white font-medium print:border-0 print:border-b print:border-gray-400 print:rounded-none print:px-0 print:py-1"
                  placeholder="XXXXXX-XXXX"
                />
              </div>
            </div>
            <p class="text-gray-700 dark:text-slate-300 leading-relaxed mb-4">och kunden (Hyrestagare):</p>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4 mb-4">
              <div>
                <label class="text-xs text-gray-500 dark:text-slate-400 block mb-1">Kundens namn</label>
                <input
                  type="text"
                  class="form-input w-full px-3 py-2 border border-gray-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-800 text-gray-900 dark:text-white font-medium print:border-0 print:border-b print:border-gray-400 print:rounded-none print:px-0 print:py-1"
                  placeholder="Kundens fullständiga namn"
                />
              </div>
              <div>
                <label class="text-xs text-gray-500 dark:text-slate-400 block mb-1">Telefon / E-post</label>
                <input
                  type="text"
                  class="form-input w-full px-3 py-2 border border-gray-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-800 text-gray-900 dark:text-white font-medium print:border-0 print:border-b print:border-gray-400 print:rounded-none print:px-0 print:py-1"
                  placeholder="Kontaktuppgifter"
                />
              </div>
            </div>
            <p class="text-gray-700 dark:text-slate-300 leading-relaxed mb-4">
              vid uthyrning av tält och tillhörande utrustning för evenemang:
            </p>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
              <div>
                <label class="text-xs text-gray-500 dark:text-slate-400 block mb-1">Eventdatum</label>
                <input
                  type="date"
                  class="form-input w-full px-3 py-2 border border-gray-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-800 text-gray-900 dark:text-white font-medium print:border-0 print:border-b print:border-gray-400 print:rounded-none print:px-0 print:py-1"
                />
              </div>
              <div>
                <label class="text-xs text-gray-500 dark:text-slate-400 block mb-1">Eventplats</label>
                <input
                  type="text"
                  class="form-input w-full px-3 py-2 border border-gray-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-800 text-gray-900 dark:text-white font-medium print:border-0 print:border-b print:border-gray-400 print:rounded-none print:px-0 print:py-1"
                  placeholder="Adress / plats"
                />
              </div>
            </div>
            <p class="mt-4 text-gray-600 dark:text-slate-400 italic">
              Genom att boka accepterar Hyrestagaren nedanstående villkor.
            </p>
          </div>

          <!-- Section 1 -->
          <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
              <span
                class="flex-shrink-0 w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center font-bold text-lg"
                >1</span
              >
              <h2 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white">Omfattning</h2>
            </div>
            <p class="text-gray-700 dark:text-slate-300 leading-relaxed ml-13 pl-0 md:pl-13">
              Villkoren gäller för uthyrning av tält, golv, bord, stolar, belysning, kylutrustning och övrig tillhörande
              utrustning enligt bekräftad bokning/offert.
            </p>
          </div>

          <!-- Section 2 -->
          <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
              <span
                class="flex-shrink-0 w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center font-bold text-lg"
                >2</span
              >
              <h2 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white">Bokning och betalning</h2>
            </div>
            <div class="text-gray-700 dark:text-slate-300 leading-relaxed space-y-3 ml-0 md:ml-13">
              <p>Detta avtal anses underskrivet när uthyraren bekräftat betald handpenning.</p>
              <p>Bokning är bindande när den bekräftats av Uthyraren.</p>
              <p><strong class="text-gray-900 dark:text-white">Betalning sker enligt följande:</strong></p>
              <p>
                För att vi som företag ska skydda oss mot obetalda avbokningar med kort varsel så krävs en handpenning
                på 50%.
              </p>
              <ul class="list-none space-y-2 ml-4">
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>50 % av hyresbeloppet betalas vid bokning (handpenning).</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>Resterande 50 % betalas senast 30 dagar före evenemangsdatum.</span>
                </li>
              </ul>
              <p>
                Vid utebliven betalning förbehåller sig Uthyraren rätten att avboka bokningen utan
                ersättningsskyldighet.
              </p>
              <p class="font-medium text-gray-900 dark:text-white">
                Handpenningen återbetalas inte vid avbokning, se punkt 3.
              </p>
            </div>
          </div>

          <!-- Section 3 -->
          <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
              <span
                class="flex-shrink-0 w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center font-bold text-lg"
                >3</span
              >
              <h2 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white">Avbokning och ombokning</h2>
            </div>
            <div class="text-gray-700 dark:text-slate-300 leading-relaxed space-y-3 ml-0 md:ml-13">
              <p>Avbokning ska ske skriftligen.</p>
              <p><strong class="text-gray-900 dark:text-white">Följande avbokningsavgifter gäller:</strong></p>
              <div class="bg-gray-50 dark:bg-slate-700/50 rounded-lg p-4 space-y-2">
                <div class="flex justify-between items-center border-b border-gray-200 dark:border-slate-600 pb-2">
                  <span>Mer än 30 dagar före evenemang:</span>
                  <span class="font-semibold text-gray-900 dark:text-white">handpenningen behålls (50 %)</span>
                </div>
                <div class="flex justify-between items-center">
                  <span>Mindre än 30 dagar före evenemang:</span>
                  <span class="font-semibold text-gray-900 dark:text-white">handpenningen behålls (100 %)</span>
                </div>
              </div>
              <p>Ombokning av datum kan ske i mån av tillgänglighet.</p>
            </div>
          </div>

          <!-- Section 4 -->
          <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
              <span
                class="flex-shrink-0 w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center font-bold text-lg"
                >4</span
              >
              <h2 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white">
                Leverans, montering och åtkomst
              </h2>
            </div>
            <div class="text-gray-700 dark:text-slate-300 leading-relaxed space-y-3 ml-0 md:ml-13">
              <p><strong class="text-gray-900 dark:text-white">Hyrestagaren ansvarar för att:</strong></p>
              <ul class="list-none space-y-2 ml-4">
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>platsen är tillgänglig vid överenskommen tid,</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>underlaget är plant, fritt från hinder och lämpligt för montering,</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>peka ut eventuella rör som ligger i marken så de inte skadas vid montering.</span>
                </li>
              </ul>
              <p class="p-4 bg-amber-50 dark:bg-amber-900/20 border-l-4 border-amber-500 rounded-r-lg">
                Om montering försvåras på grund av bristande åtkomst eller olämpligt underlag har Uthyraren rätt att ta
                ut extra kostnad eller avbryta montering utan återbetalningsskyldighet.
              </p>
            </div>
          </div>

          <!-- Section 5 -->
          <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
              <span
                class="flex-shrink-0 w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center font-bold text-lg"
                >5</span
              >
              <h2 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white">Användning av utrustningen</h2>
            </div>
            <div class="text-gray-700 dark:text-slate-300 leading-relaxed space-y-3 ml-0 md:ml-13">
              <p>Utrustningen får endast användas för avsett ändamål.</p>
              <p><strong class="text-gray-900 dark:text-white">Det är inte tillåtet att:</strong></p>
              <ul class="list-none space-y-2 ml-4">
                <li class="flex items-start gap-2">
                  <span class="text-red-500 font-bold">✗</span>
                  <span>flytta eller demontera tältet,</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-red-500 font-bold">✗</span>
                  <span>använda öppen eld, grill eller värmekällor utan skriftligt godkännande,</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-red-500 font-bold">✗</span>
                  <span>göra åverkan på utrustningen.</span>
                </li>
              </ul>
              <p>
                Hyrestagaren ansvarar för att utrustningen används på ett korrekt och säkert sätt under hela
                hyresperioden.
              </p>
            </div>
          </div>

          <!-- Section 6 -->
          <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
              <span
                class="flex-shrink-0 w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center font-bold text-lg"
                >6</span
              >
              <h2 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white">Skador och ansvar</h2>
            </div>
            <div class="text-gray-700 dark:text-slate-300 leading-relaxed space-y-3 ml-0 md:ml-13">
              <p class="p-4 bg-green-50 dark:bg-green-900/20 border-l-4 border-green-500 rounded-r-lg font-medium">
                Utrustningen är försäkrad vid olyckor och oförutsedda händelser.
              </p>
              <p><strong class="text-gray-900 dark:text-white">Skador som uppstår på grund av:</strong></p>
              <ul class="list-none space-y-2 ml-4">
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>oaktsamhet</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>felaktig användning</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>överbelastning</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>förlust eller stöld</span>
                </li>
              </ul>
              <p class="font-medium text-gray-900 dark:text-white">ersätts fullt ut av Hyrestagaren.</p>
              <p>
                Hyrestagaren ansvarar även för eventuell självrisk vid försäkringsärende om skadan orsakats av
                hyrestagaren eller gäster.
              </p>
            </div>
          </div>

          <!-- Section 7 -->
          <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
              <span
                class="flex-shrink-0 w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center font-bold text-lg"
                >7</span
              >
              <h2 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white">Väder</h2>
            </div>
            <div class="text-gray-700 dark:text-slate-300 leading-relaxed space-y-3 ml-0 md:ml-13">
              <p>Tält och utrustning är avsedda för normal användning i normala väderförhållanden.</p>
              <p>
                Vid kraftig vind, storm, extrem nederbörd eller andra säkerhetsrisker har Uthyraren rätt att avbryta
                eller avboka uppdraget av säkerhetsskäl.
              </p>
              <p class="font-medium text-gray-900 dark:text-white">
                Sådana händelser berättigar inte till skadestånd eller återbetalning.
              </p>
            </div>
          </div>

          <!-- Section 8 -->
          <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
              <span
                class="flex-shrink-0 w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center font-bold text-lg"
                >8</span
              >
              <h2 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white">Nedmontering och återlämning</h2>
            </div>
            <div class="text-gray-700 dark:text-slate-300 leading-relaxed space-y-3 ml-0 md:ml-13">
              <p>Uthyraren ansvarar för nedmontering vid överenskommen tid.</p>
              <p>Utrustningen ska då vara i samma skick som vid leverans, bortsett från normalt slitage.</p>
              <p class="font-medium text-gray-900 dark:text-white">
                Extra rengöring eller reparation debiteras Hyrestagaren.
              </p>
            </div>
          </div>

          <!-- Section 9 -->
          <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
              <span
                class="flex-shrink-0 w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center font-bold text-lg"
                >9</span
              >
              <h2 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white">Ansvarsbegränsning</h2>
            </div>
            <div class="text-gray-700 dark:text-slate-300 leading-relaxed space-y-3 ml-0 md:ml-13">
              <p><strong class="text-gray-900 dark:text-white">Uthyraren ansvarar inte för:</strong></p>
              <ul class="list-none space-y-2 ml-4">
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>personskador</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>skador på egendom</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>indirekta skador</span>
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-primary font-bold">•</span>
                  <span>förlorad inkomst eller utebliven vinst</span>
                </li>
              </ul>
              <p>som uppstår i samband med användning av utrustningen.</p>
            </div>
          </div>

          <!-- Section 10 -->
          <div class="mb-10">
            <div class="flex items-center gap-3 mb-4">
              <span
                class="flex-shrink-0 w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center font-bold text-lg"
                >10</span
              >
              <h2 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white">Personuppgifter</h2>
            </div>
            <div class="text-gray-700 dark:text-slate-300 leading-relaxed ml-0 md:ml-13">
              <p>
                Personuppgifter behandlas endast i syfte att administrera bokningen och sparas enligt gällande
                dataskyddslagstiftning (GDPR).
              </p>
            </div>
          </div>

          <!-- Signature Section -->
          <div class="border-t-2 border-gray-200 dark:border-slate-600 pt-8 mt-10 print:pt-4 print:mt-6">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6 text-center print:text-lg print:mb-4">
              Underskrifter
            </h3>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:gap-8 print:gap-4 print:grid-cols-2">
              <!-- Hyrestagare Section -->
              <div
                class="p-3 md:p-5 bg-gray-50 dark:bg-slate-700/30 rounded-xl border border-gray-200 dark:border-slate-600 print:p-3"
              >
                <h4
                  class="font-bold text-gray-900 dark:text-white mb-3 md:mb-4 text-center text-sm md:text-base print:text-sm print:mb-2"
                >
                  Hyrestagare
                </h4>
                <div class="space-y-3 print:space-y-2">
                  <div>
                    <label class="text-xs text-gray-500 dark:text-slate-400 block mb-1">Datum</label>
                    <input
                      type="date"
                      class="form-input w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-800 text-gray-900 dark:text-white print:border-0 print:border-b print:border-gray-400 print:rounded-none print:px-0"
                    />
                  </div>
                  <div>
                    <label class="text-xs text-gray-500 dark:text-slate-400 block mb-1">Underskrift</label>
                    <div
                      class="border-b-2 border-gray-300 dark:border-slate-500 h-10 print:h-8 bg-white dark:bg-slate-800 rounded print:rounded-none print:bg-transparent"
                    >
                    </div>
                  </div>
                  <div>
                    <label class="text-xs text-gray-500 dark:text-slate-400 block mb-1">Namnförtydligande</label>
                    <input
                      type="text"
                      class="form-input w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-800 text-gray-900 dark:text-white print:border-0 print:border-b print:border-gray-400 print:rounded-none print:px-0"
                      placeholder="Skriv namn"
                    />
                  </div>
                </div>
              </div>

              <!-- Uthyraren Section -->
              <div class="p-3 md:p-5 bg-primary/5 dark:bg-primary/10 rounded-xl border border-primary/20 print:p-3">
                <h4
                  class="font-bold text-gray-900 dark:text-white mb-3 md:mb-4 text-center text-sm md:text-base print:text-sm print:mb-2"
                >
                  Uthyraren
                </h4>
                <div class="space-y-3 print:space-y-2">
                  <div>
                    <label class="text-xs text-gray-500 dark:text-slate-400 block mb-1">Datum</label>
                    <input
                      type="date"
                      class="form-input w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-800 text-gray-900 dark:text-white print:border-0 print:border-b print:border-gray-400 print:rounded-none print:px-0"
                    />
                  </div>
                  <div>
                    <label class="text-xs text-gray-500 dark:text-slate-400 block mb-1">Underskrift</label>
                    <div
                      class="border-b-2 border-gray-300 dark:border-slate-500 h-10 print:h-8 bg-white dark:bg-slate-800 rounded print:rounded-none print:bg-transparent"
                    >
                    </div>
                  </div>
                  <div>
                    <label class="text-xs text-gray-500 dark:text-slate-400 block mb-1">Namnförtydligande</label>
                    <input
                      type="text"
                      class="form-input w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-slate-500 rounded-lg bg-white dark:bg-slate-800 text-gray-900 dark:text-white print:border-0 print:border-b print:border-gray-400 print:rounded-none print:px-0"
                      placeholder="Skriv namn"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Footer -->
        <div class="bg-gray-50 dark:bg-slate-700/50 px-4 sm:px-8 py-6 print:hidden">
          <div class="flex flex-row items-center justify-center gap-2 sm:gap-3">
            <button
              onclick="window.print()"
              class="inline-flex items-center gap-1.5 sm:gap-2 px-3 sm:px-6 py-2.5 sm:py-3 bg-primary text-white font-semibold rounded-xl hover:bg-primary/90 transition-colors shadow-md hover:shadow-lg text-sm sm:text-base"
            >
              <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"
                ></path>
              </svg>
              <span class="hidden xs:inline">Skriv ut</span>
              <span class="xs:hidden">Skriv ut</span>
            </button>
            <button
              onclick="window.print()"
