---
import Layout from '~/layouts/PageLayout.astro';

import HeroGlass from '~/components/widgets/HeroGlass.astro';
import FeaturesAnimated from '~/components/widgets/FeaturesAnimated.astro';
import StepsScrollTimeline from '~/components/widgets/StepsScrollTimeline.astro';
import Content from '~/components/widgets/Content.astro';
import FAQsAnimated from '~/components/widgets/FAQsAnimated.astro';
import StatsAnimated from '~/components/widgets/StatsAnimated.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import TestimonialsAnimated from '~/components/widgets/TestimonialsAnimated.astro';

import FloatingCTA from '~/components/ui/FloatingCTA';
import BookingTicker from '~/components/ui/BookingTicker';
import AvailabilityChecker from '~/components/ui/AvailabilityChecker';
import PriceEstimator from '~/components/ui/PriceEstimator';

import flextaltImg from '~/assets/images/flextalt.webp';
import partytaltImg from '~/assets/images/partytalt.webp';
import stolarImg from '~/assets/images/stolar.webp';
import bordImg from '~/assets/images/bord.webp';

const metadata = {
  title: 'Hyr Parttält i Helsingborg & Skåne',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Floating CTA Button -->
  <FloatingCTA client:load />

  <!-- Live Booking Ticker -->
  <BookingTicker client:idle />

  <!-- Hero Widget ******************* -->

  <HeroGlass
    actions={[
      {
        variant: 'primary',
        text: 'Få offert',
        href: '/kontakt',
        icon: 'mdi:email-outline',
      },
      { text: 'Se produkter', href: '#produkter' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Parttält i Helsingborg' }}
  >
    <Fragment slot="title">
      Hyr parttält i
      <span class="text-accent dark:text-white"> Helsingborg</span> & Skåne
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Komplett uthyrning av parttält, bord och stolar för ditt nästa event.
      </span>
      Bröllop, fester, företagsevent – vi har allt du behöver. Leverans i hela Skåne.
    </Fragment>
  </HeroGlass>

  <!-- Produktkategorier *************** -->

  <FeaturesAnimated
    id="produkter"
    tagline="Vårt sortiment"
    title="Välj bland våra produkter"
    subtitle="Allt du behöver för ett lyckat event – från tält till möbler."
    items={[
      {
        title: 'Flextält',
        description: 'Praktiska popup-tält för mindre event, marknader och utställningar. Snabb montering.',
        icon: 'mdi:tent',
        callToAction: {
          text: 'Se flextält',
          href: '/produkter',
        },
      },
      {
        title: 'Partytält',
        description: 'Stora partytält med fönster för bröllop, fester och företagsevent. Rymmer upp till 100 gäster.',
        icon: 'mdi:warehouse',
        callToAction: {
          text: 'Se partytält',
          href: '/produkter',
        },
      },
      {
        title: 'Stolar',
        description: 'Eleganta vita fällstolar för alla typer av event. Bekväma och stilrena.',
        icon: 'mdi:chair-rolling',
        callToAction: {
          text: 'Se stolar',
          href: '/produkter',
        },
      },
      {
        title: 'Bord',
        description: 'Stabila fällbord i olika storlekar. Perfekt för mingel eller sittningsmiddagar.',
        icon: 'mdi:table-furniture',
        callToAction: {
          text: 'Se bord',
          href: '/produkter',
        },
      },
    ]}
  />

  <!-- Så fungerar det **************** -->

  <StepsScrollTimeline
    title="Så enkelt fungerar det"
    subtitle="Från första kontakt till färdigt event – vi tar hand om allt"
    items={[
      {
        title: 'Kontakta oss',
        description:
          'Berätta om ditt event – datum, antal gäster och plats. Vi hjälper dig att välja rätt produkter.',
        icon: 'mdi:message-outline',
      },
      {
        title: 'Vi planerar tillsammans',
        description:
          'Du får en offert anpassad efter dina behov. Vi ser till att allt passar din budget och ditt event.',
        icon: 'mdi:clipboard-list-outline',
      },
      {
        title: 'Leverans & montering',
        description:
          'Vi levererar, monterar och hämtar – du behöver bara fokusera på att njuta av ditt event.',
        icon: 'mdi:truck-delivery-outline',
      },
      {
        title: 'Klart!',
        description: 'Njut av ditt event medan vi tar hand om resten. Efter festen hämtar vi upp allt.',
        icon: 'mdi:check-circle-outline',
      },
    ]}
  />

  <!-- Varför välja oss **************** -->

  <Content
    isReversed
    tagline="Varför PartyTent?"
    title="Din lokala partner för eventuthyrning"
    items={[
      {
        title: 'Lokalt i Helsingborg',
        description:
          'Vi är baserade i Helsingborg och känner området väl. Snabb service och personlig kontakt.',
      },
      {
        title: 'Komplett lösning',
        description:
          'Allt på ett ställe – tält, möbler och tillbehör. Du slipper jaga runt till olika leverantörer.',
      },
      {
        title: 'Leverans i hela Skåne',
        description:
          'Vi levererar till Helsingborg, Landskrona, Ängelholm, Höganäs, Lund, Malmö och övriga Skåne.',
      },
    ]}
    image={{
      src: flextaltImg,
      alt: 'Flextält för event',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Vi gör det enkelt</h3>
      Från första kontakt till att vi hämtar utrustningen – vi tar hand om allt.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Testimonials ******************* -->

  <TestimonialsAnimated
    title="Vad våra kunder säger"
    subtitle="Läs om andras upplevelser med PartyTent Helsingborg"
    tagline="Recensioner"
  />

  <!-- Interactive Tools Section ******************* -->

  <section class="py-16 md:py-20 bg-gradient-to-b from-gray-50 to-white dark:from-slate-800 dark:to-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <p class="text-sm font-semibold text-primary uppercase tracking-wide mb-2">Planera ditt event</p>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Börja redan nu</h2>
        <p class="text-lg text-gray-600 dark:text-slate-400 max-w-2xl mx-auto">
          Kolla tillgänglighet och beräkna pris direkt – helt utan förpliktelser
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
        <AvailabilityChecker client:visible />
        <PriceEstimator client:visible />
      </div>
    </div>
  </section>

  <!-- FAQ ******************* -->

  <FAQsAnimated
    title="Vanliga frågor"
    subtitle="Har du funderingar? Här hittar du svar på de vanligaste frågorna."
    tagline="FAQ"
    items={[
      {
        title: 'Hur långt i förväg ska jag boka?',
        description:
          'Vi rekommenderar att boka minst 2-4 veckor innan ditt event, särskilt under högsäsong (maj-september). Vid större event, boka gärna tidigare.',
      },
      {
        title: 'Ingår leverans och montering?',
        description:
          'Ja, vi erbjuder leverans, montering och hämtning. Pris beror på avstånd och omfattning – kontakta oss för offert.',
      },
      {
        title: 'Vilka områden levererar ni till?',
        description:
          'Vi levererar i hela Skåne med fokus på Helsingborg, Landskrona, Ängelholm, Höganäs, Bjuv, Klippan och omnejd.',
      },
      {
        title: 'Vad händer om det blir dåligt väder?',
        description:
          'Våra tält är robusta och tål normalt väder. Vid extrem vädervarning kontaktar vi dig för att diskutera lösningar.',
      },
      {
        title: 'Kan jag hyra för flera dagar?',
        description:
          'Absolut! Vi erbjuder flexibla hyresperioder. Kontakta oss för priser vid längre hyrestider.',
      },
    ]}
  />

  <!-- Stats ******************* -->

  <StatsAnimated
    title="Varför välja oss"
    subtitle="Vi har hjälpt hundratals kunder att skapa oförglömliga event."
    stats={[
      { amount: '500+', title: 'Nöjda kunder' },
      { amount: '1000+', title: 'Event genomförda' },
      { amount: '15+', title: 'Års erfarenhet' },
      { amount: '100%', title: 'Kundnöjdhet' },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-primary"></div>
    </Fragment>
  </StatsAnimated>

  <!-- CTA *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Kontakta oss',
        href: '/kontakt',
        icon: 'mdi:email-outline',
      },
    ]}
  >
    <Fragment slot="title">
      Redo att planera ditt event?
    </Fragment>

    <Fragment slot="subtitle">
      Kontakta oss idag för en kostnadsfri offert. Vi hjälper dig att skapa det perfekta eventet.
    </Fragment>
  </CallToAction>
</Layout>
