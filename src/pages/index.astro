---
import Layout from '~/layouts/PageLayout.astro';

import HeroGlass from '~/components/widgets/HeroGlass.astro';
import Content from '~/components/widgets/Content.astro';
import StatsAnimated from '~/components/widgets/StatsAnimated.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import TestimonialsAnimated from '~/components/widgets/TestimonialsAnimated.astro';
import Image from '~/components/common/Image.astro';
import { Icon } from 'astro-icon/components';

import FloatingCTA from '~/components/ui/FloatingCTA';
import BookingTicker from '~/components/ui/BookingTicker';
import AvailabilityChecker from '~/components/ui/AvailabilityChecker';
import PriceEstimator from '~/components/ui/PriceEstimator';

import flextaltImg from '~/assets/images/flextalt.webp';
import { categories } from '~/data/products';

const metadata = {
  title: 'Hyr Parttält i Helsingborg & Skåne',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Floating CTA Button -->
  <FloatingCTA client:load />

  <!-- Live Booking Ticker -->
  <BookingTicker client:idle />

  <!-- Hero Widget ******************* -->

  <HeroGlass
    actions={[
      {
        variant: 'primary',
        text: 'Få offert',
        href: '/kontakt',
        icon: 'mdi:email-outline',
      },
      { text: 'Se produkter', href: '#produkter' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Parttält i Helsingborg' }}
  >
    <Fragment slot="title">
      Hyr parttält i
      <span class="text-accent dark:text-white"> Helsingborg</span> & Skåne
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Komplett uthyrning av parttält, bord och stolar för ditt nästa event.
      </span>
      Bröllop, fester, företagsevent – vi har allt du behöver. Leverans i hela Skåne.
    </Fragment>
  </HeroGlass>

  <!-- Produktkategorier *************** -->

  <section id="produkter" class="py-12 md:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <!-- Section Header -->
      <div class="text-center mb-10 md:mb-12">
        <p class="text-sm font-semibold text-primary uppercase tracking-wide mb-2">Vårt sortiment</p>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Produkter för ditt event</h2>
        <p class="text-lg text-gray-600 dark:text-slate-400 max-w-2xl mx-auto">
          Från partytält till möbler – vi har allt du behöver för ett lyckat event i Helsingborg och Skåne.
        </p>
      </div>

      <!-- Category Selector Cards -->
      <div class="flex flex-wrap justify-center gap-3 md:gap-4 mb-12">
        {categories.map((cat, index) => (
          <button
            data-category={cat.id}
            class="category-card group flex items-center gap-3 px-4 py-3 md:px-6 md:py-4 rounded-2xl bg-white dark:bg-slate-800 border-2 border-gray-200 dark:border-slate-700 hover:border-primary dark:hover:border-primary shadow-sm hover:shadow-md transition-all duration-200 cursor-pointer"
            style={`animation-delay: ${index * 50}ms`}
          >
            <div class="w-12 h-12 md:w-14 md:h-14 rounded-xl overflow-hidden flex-shrink-0">
              <Image
                src={cat.mainImage}
                alt={cat.title}
                class="w-full h-full object-cover"
                widths={[56, 112]}
                sizes="56px"
                loading="eager"
              />
            </div>
            <div class="text-left">
              <span class="block font-semibold text-gray-900 dark:text-white group-hover:text-primary transition-colors">{cat.title}</span>
              <span class="block text-sm text-gray-500 dark:text-slate-400">{cat.shortDesc}</span>
            </div>
          </button>
        ))}
      </div>

      <!-- Product Details Panel -->
      <div id="product-panel" class="product-panel">
        {categories.map((cat, catIndex) => (
          <div
            data-panel={cat.id}
            class={`panel-content ${catIndex === 0 ? 'active' : ''}`}
          >
            <!-- Category Overview -->
            <div class="mb-8">
              <h3 class="text-2xl md:text-3xl font-bold mb-4 text-gray-900 dark:text-white">{cat.title}</h3>
              <p class="text-lg text-gray-600 dark:text-slate-400 mb-6">{cat.fullDescription}</p>

              <!-- Features -->
              <div class="flex flex-wrap gap-2 mb-8">
                {cat.features.map((feature) => (
                  <span class="inline-flex items-center gap-1 px-3 py-1 rounded-lg bg-primary/10 text-primary text-sm font-medium">
                    <Icon name="mdi:check" class="w-4 h-4" />
                    {feature}
                  </span>
                ))}
              </div>
            </div>

            <!-- Product Variants Grid -->
            <div class="grid md:grid-cols-2 gap-6 mb-8">
              {cat.variants.map((variant, varIndex) => (
                <div class="product-variant bg-white dark:bg-slate-800 rounded-2xl overflow-hidden shadow-lg border border-gray-100 dark:border-slate-700 hover:shadow-xl transition-shadow">
                  <!-- Variant Image -->
                  <div class="relative aspect-[4/3] overflow-hidden">
                    <Image
                      src={variant.image}
                      alt={variant.name}
                      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                      widths={[400, 600]}
                      sizes="(max-width: 768px) 100vw, 50vw"
                      loading={catIndex === 0 && varIndex < 2 ? "eager" : "lazy"}
                    />
                  </div>

                  <!-- Variant Content -->
                  <div class="p-5">
                    <div class="flex items-start justify-between mb-2">
                      <h4 class="text-xl font-bold text-gray-900 dark:text-white">{variant.name}</h4>
                      {variant.price && (
                        <span class="inline-flex items-center px-3 py-1 rounded-lg bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-sm font-semibold whitespace-nowrap ml-2">
                          {variant.price}
                        </span>
                      )}
                    </div>
                    <p class="text-gray-600 dark:text-slate-400 mb-4">{variant.description}</p>

                    <!-- Specifications -->
                    {variant.specs && (
                      <div class="border-t border-gray-100 dark:border-slate-700 pt-4 mt-4">
                        <h5 class="text-sm font-semibold text-gray-500 dark:text-slate-400 uppercase tracking-wide mb-3">Specifikationer</h5>
                        <dl class="grid grid-cols-2 gap-2 text-sm">
                          {Object.entries(variant.specs).map(([key, value]) => (
                            <div class="contents">
                              <dt class="text-gray-500 dark:text-slate-400">{key}:</dt>
                              <dd class="text-gray-900 dark:text-white font-medium">{value}</dd>
                            </div>
                          ))}
                        </dl>
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>

            <!-- CTA -->
            <div class="text-center">
              <a
                href="/kontakt"
                class="inline-flex items-center gap-2 px-8 py-4 rounded-xl bg-primary text-white font-semibold hover:bg-primary/90 transition-colors text-lg"
              >
                <Icon name="mdi:email-outline" class="w-6 h-6" />
                Få offert på {cat.title.toLowerCase()}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Varför välja oss **************** -->

  <Content
    isReversed
    tagline="Varför PartyTent?"
    title="Din lokala partner för eventuthyrning"
    items={[
      {
        title: 'Lokalt i Helsingborg',
        description:
          'Vi är baserade i Helsingborg och känner området väl. Snabb service och personlig kontakt.',
      },
      {
        title: 'Komplett lösning',
        description:
          'Allt på ett ställe – tält, möbler och tillbehör. Du slipper jaga runt till olika leverantörer.',
      },
      {
        title: 'Leverans i hela Skåne',
        description:
          'Vi levererar till Helsingborg, Landskrona, Ängelholm, Höganäs, Lund, Malmö och övriga Skåne.',
      },
    ]}
    image={{
      src: flextaltImg,
      alt: 'Flextält för event',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Vi gör det enkelt</h3>
      Från första kontakt till att vi hämtar utrustningen – vi tar hand om allt.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Testimonials ******************* -->

  <TestimonialsAnimated
    title="Vad våra kunder säger"
    subtitle="Läs om andras upplevelser med PartyTent Helsingborg"
    tagline="Recensioner"
  />

  <!-- Interactive Tools Section ******************* -->

  <section class="py-16 md:py-20 bg-gradient-to-b from-gray-50 to-white dark:from-slate-800 dark:to-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <p class="text-sm font-semibold text-primary uppercase tracking-wide mb-2">Planera ditt event</p>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Börja redan nu</h2>
        <p class="text-lg text-gray-600 dark:text-slate-400 max-w-2xl mx-auto">
          Kolla tillgänglighet och beräkna pris direkt – helt utan förpliktelser
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
        <AvailabilityChecker client:visible />
        <PriceEstimator client:visible />
      </div>
    </div>
  </section>

  <!-- Stats ******************* -->

  <StatsAnimated
    title="Varför välja oss"
    subtitle="Vi har hjälpt hundratals kunder att skapa oförglömliga event."
    stats={[
      { amount: '500+', title: 'Nöjda kunder' },
      { amount: '1000+', title: 'Event genomförda' },
      { amount: '15+', title: 'Års erfarenhet' },
      { amount: '100%', title: 'Kundnöjdhet' },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-primary"></div>
    </Fragment>
  </StatsAnimated>

  <!-- CTA *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Kontakta oss',
        href: '/kontakt',
        icon: 'mdi:email-outline',
      },
    ]}
  >
    <Fragment slot="title">
      Redo att planera ditt event?
    </Fragment>

    <Fragment slot="subtitle">
      Kontakta oss idag för en kostnadsfri offert. Vi hjälper dig att skapa det perfekta eventet.
    </Fragment>
  </CallToAction>
</Layout>

<style>
  .category-card {
    opacity: 0;
    transform: translateY(10px);
    animation: fadeIn 0.4s cubic-bezier(0.05, 0.7, 0.1, 1) forwards;
  }

  .category-card.active {
    border-color: var(--aw-color-primary, rgb(26 115 232));
    background: linear-gradient(135deg, rgba(26, 115, 232, 0.05) 0%, rgba(26, 115, 232, 0.02) 100%);
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .panel-content {
    display: none;
    opacity: 0;
  }

  .panel-content.active {
    display: block;
    animation: panelFadeIn 0.4s cubic-bezier(0.05, 0.7, 0.1, 1) forwards;
  }

  @keyframes panelFadeIn {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .product-variant {
    opacity: 0;
    animation: variantFadeIn 0.5s ease-out forwards;
    transform-style: preserve-3d;
    perspective: 1000px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .product-variant:hover {
    transform: translateY(-8px);
  }

  .product-variant:nth-child(1) { animation-delay: 0.1s; }
  .product-variant:nth-child(2) { animation-delay: 0.2s; }
  .product-variant:nth-child(3) { animation-delay: 0.3s; }
  .product-variant:nth-child(4) { animation-delay: 0.4s; }

  @keyframes variantFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Category selector functionality
  function initProductSelector() {
    const categoryCards = document.querySelectorAll('.category-card');
    const panels = document.querySelectorAll('.panel-content');

    if (categoryCards.length === 0) return;

    // Set first card as active on load
    categoryCards[0]?.classList.add('active');

    categoryCards.forEach((card) => {
      card.addEventListener('click', () => {
        const categoryId = card.getAttribute('data-category');

        // Update active card
        categoryCards.forEach((c) => c.classList.remove('active'));
        card.classList.add('active');

        // Update visible panel
        panels.forEach((panel) => {
          panel.classList.remove('active');
          if (panel.getAttribute('data-panel') === categoryId) {
            panel.classList.add('active');
          }
        });
      });
    });
  }

  // Initialize on load
  initProductSelector();

  // Re-initialize after View Transitions
  document.addEventListener('astro:after-swap', initProductSelector);
</script>
