---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Image from '~/components/common/Image.astro';
import { Icon } from 'astro-icon/components';
import { categories } from '~/data/products';

const metadata = {
  title: 'Alla produkter',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Vårt sortiment"
    title="Produkter för ditt event"
    subtitle="Från partytält till möbler – vi har allt du behöver för ett lyckat event i Helsingborg och Skåne."
  />

  <!-- Product Selector Section -->
  <section class="py-12 md:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">

      <!-- Category Selector Cards -->
      <div class="flex flex-wrap justify-center gap-3 md:gap-4 mb-12">
        {categories.map((cat, index) => (
          <button
            data-category={cat.id}
            class="category-card group flex items-center gap-3 px-4 py-3 md:px-6 md:py-4 rounded-2xl bg-white dark:bg-slate-800 border-2 border-gray-200 dark:border-slate-700 hover:border-primary dark:hover:border-primary shadow-sm hover:shadow-md transition-all duration-200 cursor-pointer"
            style={`animation-delay: ${index * 50}ms`}
          >
            <div class="w-12 h-12 md:w-14 md:h-14 rounded-xl overflow-hidden flex-shrink-0">
              <Image
                src={cat.mainImage}
                alt={cat.title}
                class="w-full h-full object-cover"
                widths={[56, 112]}
                sizes="56px"
                loading="eager"
              />
            </div>
            <div class="text-left">
              <span class="block font-semibold text-gray-900 dark:text-white group-hover:text-primary transition-colors">{cat.title}</span>
              <span class="block text-sm text-gray-500 dark:text-slate-400">{cat.shortDesc}</span>
            </div>
          </button>
        ))}
      </div>

      <!-- Product Details Panel -->
      <div id="product-panel" class="product-panel">
        {categories.map((cat, catIndex) => (
          <div
            data-panel={cat.id}
            class={`panel-content ${catIndex === 0 ? 'active' : ''}`}
          >
            <!-- Category Overview -->
            <div class="mb-8">
              <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-white">{cat.title}</h2>
              <p class="text-lg text-gray-600 dark:text-slate-400 mb-6">{cat.fullDescription}</p>

              <!-- Features -->
              <div class="flex flex-wrap gap-2 mb-8">
                {cat.features.map((feature) => (
                  <span class="inline-flex items-center gap-1 px-3 py-1 rounded-lg bg-primary/10 text-primary text-sm font-medium">
                    <Icon name="mdi:check" class="w-4 h-4" />
                    {feature}
                  </span>
                ))}
              </div>
            </div>

            <!-- Product Variants Grid -->
            <div class="grid md:grid-cols-2 gap-6 mb-8">
              {cat.variants.map((variant, varIndex) => (
                <div class="product-variant bg-white dark:bg-slate-800 rounded-2xl overflow-hidden shadow-lg border border-gray-100 dark:border-slate-700 hover:shadow-xl transition-shadow">
                  <!-- Variant Image -->
                  <div class="relative aspect-[4/3] overflow-hidden">
                    <Image
                      src={variant.image}
                      alt={variant.name}
                      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                      widths={[400, 600]}
                      sizes="(max-width: 768px) 100vw, 50vw"
                      loading={catIndex === 0 && varIndex < 2 ? "eager" : "lazy"}
                    />
                  </div>

                  <!-- Variant Content -->
                  <div class="p-5">
                    <div class="flex items-start justify-between mb-2">
                      <h3 class="text-xl font-bold text-gray-900 dark:text-white">{variant.name}</h3>
                      {variant.price && (
                        <span class="inline-flex items-center px-3 py-1 rounded-lg bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-sm font-semibold whitespace-nowrap ml-2">
                          {variant.price}
                        </span>
                      )}
                    </div>
                    <p class="text-gray-600 dark:text-slate-400 mb-4">{variant.description}</p>

                    <!-- Specifications -->
                    {variant.specs && (
                      <div class="border-t border-gray-100 dark:border-slate-700 pt-4 mt-4">
                        <h4 class="text-sm font-semibold text-gray-500 dark:text-slate-400 uppercase tracking-wide mb-3">Specifikationer</h4>
                        <dl class="grid grid-cols-2 gap-2 text-sm">
                          {Object.entries(variant.specs).map(([key, value]) => (
                            <div class="contents">
                              <dt class="text-gray-500 dark:text-slate-400">{key}:</dt>
                              <dd class="text-gray-900 dark:text-white font-medium">{value}</dd>
                            </div>
                          ))}
                        </dl>
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>

            <!-- CTA -->
            <div class="text-center">
              <a
                href="/kontakt"
                class="inline-flex items-center gap-2 px-8 py-4 rounded-xl bg-primary text-white font-semibold hover:bg-primary/90 transition-colors text-lg"
              >
                <Icon name="mdi:email-outline" class="w-6 h-6" />
                Få offert på {cat.title.toLowerCase()}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <style>
    .category-card {
      opacity: 0;
      transform: translateY(10px);
      animation: fadeIn 0.4s cubic-bezier(0.05, 0.7, 0.1, 1) forwards;
    }

    .category-card.active {
      border-color: var(--aw-color-primary, rgb(26 115 232));
      background: linear-gradient(135deg, rgba(26, 115, 232, 0.05) 0%, rgba(26, 115, 232, 0.02) 100%);
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .panel-content {
      display: none;
      opacity: 0;
    }

    .panel-content.active {
      display: block;
      animation: panelFadeIn 0.4s cubic-bezier(0.05, 0.7, 0.1, 1) forwards;
    }

    @keyframes panelFadeIn {
      from {
        opacity: 0;
        transform: translateX(-20px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .product-variant {
      opacity: 0;
      animation: variantFadeIn 0.5s ease-out forwards;
      transform-style: preserve-3d;
      perspective: 1000px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-variant:hover {
      transform: translateY(-8px) rotateX(2deg) rotateY(-2deg);
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
    }

    .product-variant:nth-child(1) { animation-delay: 0.1s; }
    .product-variant:nth-child(2) { animation-delay: 0.2s; }
    .product-variant:nth-child(3) { animation-delay: 0.3s; }
    .product-variant:nth-child(4) { animation-delay: 0.4s; }

    @keyframes variantFadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* 3D image effect on hover */
    .product-variant:hover img {
      transform: scale(1.08) translateZ(20px);
    }

    .product-variant img {
      transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }
  </style>

  <script>
    // Category selector functionality
    const categoryCards = document.querySelectorAll('.category-card');
    const panels = document.querySelectorAll('.panel-content');

    // Set first card as active on load
    categoryCards[0]?.classList.add('active');

    categoryCards.forEach((card) => {
      card.addEventListener('click', () => {
        const categoryId = card.getAttribute('data-category');

        // Update active card
        categoryCards.forEach((c) => c.classList.remove('active'));
        card.classList.add('active');

        // Update visible panel
        panels.forEach((panel) => {
          panel.classList.remove('active');
          if (panel.getAttribute('data-panel') === categoryId) {
            panel.classList.add('active');
          }
        });
      });
    });
  </script>

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Få offert',
        href: '/kontakt',
        icon: 'mdi:email-outline',
      },
    ]}
  >
    <Fragment slot="title">
      Behöver du hjälp att välja?
    </Fragment>

    <Fragment slot="subtitle">
      Kontakta oss så hjälper vi dig att hitta rätt produkter för ditt event.
    </Fragment>
  </CallToAction>
</Layout>
