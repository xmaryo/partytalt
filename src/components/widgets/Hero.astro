---
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';

import type { Hero as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,

  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),
  image = await Astro.slots.render('image'),

  id,
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<section class="relative md:-mt-[76px] not-prose" {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : null}
    </slot>
  </div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
    <div class="py-12 md:py-20">
      <div
        class="intersect-once intersect-no-queue intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade pb-10 md:pb-16"
      >
        {
          image && (
            <div class="hero-image-wrapper relative m-auto max-w-5xl">
              {typeof image === 'string' ? (
                <Fragment set:html={image} />
              ) : (
                <Image
                  class="hero-image mx-auto rounded-md w-full"
                  widths={[400, 768, 1024, 2040]}
                  sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
                  loading="eager"
                  width={1024}
                  height={576}
                  {...image}
                />
              )}
            </div>
          )
        }
      </div>
      <div class="text-center max-w-5xl mx-auto">
        {
          tagline && (
            <p
              class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
              set:html={tagline}
            />
          )
        }
        {
          title && (
            <h1
              class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
              set:html={title}
            />
          )
        }
        <div class="max-w-3xl mx-auto">
          {
            subtitle && (
              <p
                class="text-xl text-muted mb-6 dark:text-slate-300 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
                set:html={subtitle}
              />
            )
          }
          {
            actions && (
              <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
                {Array.isArray(actions) ? (
                  actions.map((action) => (
                    <div class="flex w-full sm:w-auto">
                      <Button {...(action || {})} class="w-full sm:mb-0" />
                    </div>
                  ))
                ) : (
                  <Fragment set:html={actions} />
                )}
              </div>
            )
          }
        </div>
        {content && <Fragment set:html={content} />}
      </div>
    </div>
  </div>
</section>

<style>
  /* Dramatic Hero Image Animation */
  .hero-image-wrapper {
    perspective: 1000px;
  }

  .hero-image {
    /* GPU acceleration */
    will-change: transform, opacity, filter;
    transform: translateZ(0);
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;

    /* Initial state */
    opacity: 0;
    transform: scale(1.02) translateX(-40px) translateZ(0);
    filter: blur(8px);

    /* M3 Emphasized decelerate easing for dramatic entrance */
    transition:
      opacity 0.8s cubic-bezier(0.05, 0.7, 0.1, 1),
      transform 1s cubic-bezier(0.05, 0.7, 0.1, 1),
      filter 0.6s cubic-bezier(0.2, 0, 0, 1);

    /* Animate on load */
    animation: heroImageReveal 1.2s cubic-bezier(0.05, 0.7, 0.1, 1) forwards;
    animation-delay: 0.1s;
  }

  @keyframes heroImageReveal {
    0% {
      opacity: 0;
      transform: scale(1.02) translateX(-40px) translateZ(0);
      filter: blur(8px);
    }
    50% {
      filter: blur(2px);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateX(0) translateZ(0);
      filter: blur(0);
    }
  }

  /* Subtle shadow animation for depth */
  .hero-image-wrapper::after {
    content: '';
    position: absolute;
    bottom: -20px;
    left: 10%;
    right: 10%;
    height: 40px;
    background: radial-gradient(ellipse at center, rgba(0, 0, 0, 0.15) 0%, transparent 70%);
    opacity: 0;
    transform: scaleX(0.8);
    transition:
      opacity 0.8s cubic-bezier(0.05, 0.7, 0.1, 1) 0.3s,
      transform 1s cubic-bezier(0.05, 0.7, 0.1, 1) 0.3s;
    animation: heroShadowReveal 1.2s cubic-bezier(0.05, 0.7, 0.1, 1) forwards;
    animation-delay: 0.3s;
    pointer-events: none;
  }

  @keyframes heroShadowReveal {
    0% {
      opacity: 0;
      transform: scaleX(0.8);
    }
    100% {
      opacity: 1;
      transform: scaleX(1);
    }
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .hero-image {
      animation: none;
      opacity: 1;
      transform: none;
      filter: none;
      transition: none;
    }

    .hero-image-wrapper::after {
      animation: none;
      opacity: 1;
      transform: scaleX(1);
    }
  }
</style>
