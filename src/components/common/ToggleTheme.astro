---
import { Icon } from 'astro-icon/components';

import { UI } from 'astrowind:config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
  iconName?: string;
}

const {
  label = 'Toggle between Dark and Light mode',
  class:
    className = 'theme-toggle text-muted dark:text-gray-400 focus:outline-none rounded-lg text-sm p-2.5 inline-flex items-center',
  iconClass = 'w-6 h-6',
  iconName = 'mdi:weather-sunny',
} = Astro.props;
---

{
  !(UI.theme && UI.theme.endsWith(':only')) && (
    <button type="button" class={className} aria-label={label} data-aw-toggle-color-scheme>
      <Icon name={iconName} class={iconClass} />
    </button>
  )
}

<style>
  .theme-toggle {
    position: relative;
    border: 2px solid transparent;
    transition:
      border-color 0.2s cubic-bezier(0.2, 0, 0, 1),
      background-color 0.2s cubic-bezier(0.2, 0, 0, 1);
  }

  .theme-toggle:hover {
    border-color: var(--aw-color-primary, rgb(26 115 232));
    background-color: rgba(26, 115, 232, 0.05);
  }

  :global(.dark) .theme-toggle:hover {
    border-color: var(--aw-color-primary, rgb(96 165 250));
    background-color: rgba(96, 165, 250, 0.1);
  }
</style>
