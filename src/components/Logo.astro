---
import { Image } from 'astro:assets';
import logoLight from '~/assets/images/logo/logo-light.png';
import logoDark from '~/assets/images/logo/logo-dark.png';
---

<span class="self-center flex items-center relative">
  <!-- Light theme: show light logo (visible on white background) -->
  <Image
    src={logoLight}
    alt="Party Tält Helsingborg"
    class="h-24 md:h-28 w-auto dark:hidden absolute top-1/2 -translate-y-1/2 left-0"
    width={160}
    height={160}
  />
  <!-- Dark theme: show dark logo (visible on dark background) -->
  <Image
    src={logoDark}
    alt="Party Tält Helsingborg"
    class="h-24 md:h-28 w-auto hidden dark:block absolute top-1/2 -translate-y-1/2 left-0"
    width={160}
    height={160}
  />
  <!-- Spacer for logo -->
  <span class="w-20 md:w-24 h-14 md:h-16"></span>
  <!-- Text beside logo -->
  <span class="ml-0 text-lg md:text-xl font-bold text-gray-900 dark:text-white">partytält<span class="text-accent dark:text-white">Hbg</span></span>
</span>
